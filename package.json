{
  "name": "dialog-element-macro",
  "productName": "dialog-element-macro",
  "version": "0.0.1",
  "main": "dist/dialog-element-macro.js",
  "types": "src/dialog-element-macro.d.ts",
  "scripts": {
    "compile-typescript": "echo \"compile ts\" && rollup -c --failAfterWarnings && cp src/*.d.ts dist/",
    "compile-sass": "echo \"compile-sass\" && sass src:dist",
    "compile-sass-then-tweego": "echo \"compile-sass-then-tweego\" && npm run compile-sass && npm run tweego",
    "watch-sass-files": "echo \"watch-sass-files\" && onchange --verbose --poll 100 --await-write-finish 3000 --kill \"src/dialog-element-macro.scss\" -- npm run compile-sass-then-tweego",
    "tweego": "echo \"tweego\" && tweego -o dist_test/index.html ./dist './test/fixtures'",
    "watch-twee-files": "echo \"watch-twee-files\" && onchange --verbose --poll 100 --await-write-finish 2000 --kill \"test/*.twee\" -- npm run tweego",
    "compile-twine": "echo \"mkdir dist\" && mkdir dist 2> /dev/null || true && mkdir dist_test 2> /dev/null || true && npm run compile-sass && npm run tweego",
    "watch-typescript-files-onchange-workaround-helper": "echo \"watch-typescript-files-onchange-workaround-helper\" && npm run compile-typescript && npm run tweego",
    "watch-typescript-files": "echo \"watch-typescript-files\" && onchange --verbose --initial --poll 100 --await-write-finish 4000 --kill \"src/*.ts\" -- npm run watch-typescript-files-onchange-workaround-helper",
    "watch": "echo \"watch-files\" && ./watch.sh",
    "watch-cleanup": "echo \"watch-cleanup\" && ./watch-cleanup.sh",
    "lint": "echo \"lint\" && eslint 'src/**' --fix",
    "build": "npm run compile-typescript && npm run compile-twine",
    "test": "jasmine -- --stack-trace-limit=100 && npm run build && testcafe 'test/**.ts'"
  },
  "keywords": [],
  "author": {
    "name": "Bawdy Ink Slinger",
    "email": "BawdyInkSlinger@gmail.com"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/jasmine": "^4.3.1",
    "@types/jquery": "^3.5.16",
    "@types/node": "^18.15.11",
    "@types/sinon": "^10.0.13",
    "@types/twine-sugarcube": "^2.36.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "async-mutex": "^0.4.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-testcafe": "^0.2.1",
    "js-combinatorics": "^2.1.1",
    "npm-run-all": "^4.1.2",
    "onchange": "^7.1.0",
    "rollup": "^3.2.2",
    "sinon": "^15.0.3",
    "testcafe": "^3.0.1",
    "jasmine": "^4.6.0",
    "testcafe-reporter-spec-time": "^4.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.1.3"
  }
}
